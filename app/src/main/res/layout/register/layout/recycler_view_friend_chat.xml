<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/header_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goose" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/edit_text_oval"
        android:gravity="left"
        android:maxWidth="300dp"
        android:minHeight="30dp"
        android:text="TextViewasdasdasdasdasdasdasdasdasdasdasdasdasdTextViewasdasdasdasdasdasdasdasd asdasdasdasdasdTextViewasdasdasdasdasd asdasdasd asdasdasdasdasdTextViewasdasdasdasdasd asdasdasd asdasdasdasdasdTextViewasdasdasdasdasd asdasdasd asdasdasdasdasd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

</androidx.constraintlayout.widget.ConstraintLayout>