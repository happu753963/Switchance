<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.IconActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F8CBAD"
            android:cropToPadding="false"
            android:paddingLeft="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/switchance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8CBAD"
            android:gravity="center"
            android:text="Switchance"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_chameleon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/chameleon" />

                    <TextView
                        android:id="@+id/txt_chameleon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隨和龍" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_chicken"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/chicken" />

                    <TextView
                        android:id="@+id/txt_chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活潑雞" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_fox"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/fox" />

                    <TextView
                        android:id="@+id/txt_fox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聰明狐" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_goose"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/goose" />

                    <TextView
                        android:id="@+id/txt_goose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="呆萌鵝" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_lion"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/lion" />

                    <TextView
                        android:id="@+id/txt_lion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="霸氣獅" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClickIcon"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/img_hedgehog"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:cropToPadding="false"
                        android:onClick="onClickIcon"
                        android:paddingLeft="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/hedgehog" />

                    <TextView
                        android:id="@+id/txt_hedgehog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="內向猬" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>